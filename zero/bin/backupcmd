#!/usr/bin/python

import Pyro4
import time

plexus = Pyro4.Proxy('PYRO:plexus@localhost:1888')
plexus._pyroTimeout = 5
task_id = plexus.request_backup("uos-015101")
time.sleep(5)

print plexus.is_backup_running(task_id)

time.sleep(50)

print plexus.is_backup_running(task_id)

time.sleep(10)

print plexus.is_backup_running(task_id)
